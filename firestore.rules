rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Правила для коллекции пользователей
    match /users/{userId} {
      // Разрешаем чтение всем (для поиска пригласившего)
      allow read: if true;
      // Разрешаем запись только аутентифицированным пользователям
      allow write: if request.auth != null;
    }
    
    // Правила для индекса по username (для удобства просмотра)
    match /usersByUsername/{username} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if false; // Запрещаем изменение и удаление
    }
    
    // Правила для коллекции рейтинга
    match /leaderboard/{document} {
      // Разрешаем чтение всем
      allow read: if true;
      // Разрешаем запись только аутентифицированным пользователям
      allow write: if request.auth != null;
    }
  }
}
